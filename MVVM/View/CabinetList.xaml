<UserControl x:Class="FlowRecorder.MVVM.View.CabinetList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowRecorder.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox ItemsSource="{Binding Cabinets}" Background="Transparent" ScrollViewer.CanContentScroll="False" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:Cabinet/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
